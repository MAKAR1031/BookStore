<div class="login_partical">
    @if (Request.IsAuthenticated) {
        <text>
            <div class="navigation_item">
                Здравствуйте, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Управление" })
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Выйти" />
                }
            </div>
        </text>
    } else {
        <div class="navigation_item">@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</div>
        <div class="navigation_item">@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</div>
    }
</div>
